    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.3.1",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^12.0.2",
    "nodemon": "^2.0.15",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.2",
    "supertest": "^6.1.6"
